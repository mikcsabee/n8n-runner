{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts", "!src/index.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "commonjs"
        }
      }
    ]
  }
}
